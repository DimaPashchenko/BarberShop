
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Date and time</th>
      <th>Barber name</th>
      <th>color</th>
    <tr>
  </thead>

  <body>
    <% @results.each do |row|%>
    
      <tr>
        <td><%= row['user_name'] %></td>
        <td><%= row['phone'] %></td>
        <td><%= row['datestamp'] %></td>
        <td><%= row['barber'] %></td>
        <td><%= row['color'] %></td>
      <tr>
    <% end %>
  </body>  
</table>